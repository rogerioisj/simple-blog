<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <% if(!articles || articles.length < 1) {%>
            <h1>No one article write</h1>
        <% } %>

        <% let elementCounter = 0 %>
        <% let rowCounter = 0 %>
        <% while (elementCounter < articles.length) { %>
            <div class="row">
                <% while (rowCounter < 3 && elementCounter < articles.length) { %>
                    <div class="col-sm">
                        <div class="card" style="width: 22rem;">
                            <div class="card-body">
                                <h5 class="card-title"><%= articles[elementCounter].title %></h5>
                                <p>teste</p>
                                <a href="/article/<%= articles[elementCounter].slug %>" class="btn btn-success">Read</a>
                            </div>
                        </div>
                        <br>
                    </div>
                    <% elementCounter++ %>
                    <% rowCounter++ %>
                <% } %>
                <% rowCounter = 0 %>
            </div>
        <% } %>
        <div class="row">
            <hr>
            <% if (page > 1) { %>
                <div class="col col-12">
                    <a style="float: left" href="index?page=<%= +page-1 %>"><<< Previous</a>
                </div>
            <% } %>
            <% if (next > 1) { %>
                <div class="col col-12">
                    <a style="float: right" href="index?page=<%= +page+1 %>">Next >>></a>
                </div>
            <% } %>
        </div>
    </div>
</body>
<%- include ('partials/footer.ejs') %>